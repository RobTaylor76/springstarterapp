<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">



	<changeSet id="1" author="rob">
		<createTable tableName="user">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="email" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="password" type="varchar(50)" />
		</createTable>
		<addAutoIncrement catalogName="cat" columnDataType="int"
			columnName="id" incrementBy="1" startWith="100" tableName="user" />

		<createTable tableName="role">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="user_id" type="int">
				<constraints nullable="false" />
			</column>
			<column name="roletype_id" type="int">
				<constraints nullable="false" />
			</column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addAutoIncrement catalogName="cat" columnDataType="int"
			columnName="id" incrementBy="1" startWith="100" tableName="role" />

		<createTable tableName="roletype">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addAutoIncrement catalogName="cat" columnDataType="int"
			columnName="id" incrementBy="1" startWith="100" tableName="roletype" />


	</changeSet>


</databaseChangeLog>